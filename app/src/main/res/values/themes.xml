<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YaListo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_01</item>
        <item name="colorPrimaryVariant">@color/pink_02</item>
        <item name="colorOnPrimary">@color/light_04</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_01</item>
        <item name="colorSecondaryVariant">@color/light_03</item>
        <item name="colorOnSecondary">@color/dark_01</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="UIKit.Theme">
        <item name="android:statusBarColor">@color/light_01</item>
        <item name="android:navigationBarColor">@color/light_01</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>